<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white_95</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

    <style name="LanguageSelectorTextStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_material_header</item>
        <item name="android:padding">@dimen/activity_default_padding</item>
        <item name="android:background">@color/white</item>
        <item name="android:height">60dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>


    </style>

    <style name="headlineText" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_material_header</item>
        <item name="android:padding">@dimen/activity_default_padding</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="fontFamily">@font/opensans_semibold</item>

    </style>

    <style name="subHeadText" parent="TextAppearance.AppCompat.Display4">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/abc_text_size_menu_material</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/opensans_light</item>
        <item name="fontFamily">@font/opensans_light</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="bodyText" parent="TextAppearance.AppCompat.Display4">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/abc_text_size_menu_material</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/activity_default_padding</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/opensans_light</item>
        <item name="fontFamily">@font/opensans_light</item>
        <item name="android:ellipsize">end</item>

    </style>



    <!--Navigation-->
    <style name="NavigationMapRoute">
        <!-- Colors -->
        <item name="routeColor">@color/mapboxBlue</item>
        <item name="routeModerateCongestionColor">@color/mapboxYellow</item>
        <item name="routeSevereCongestionColor">@color/mapboxPink</item>
        <item name="routeShieldColor">@color/mapboxAppPrimaryLight</item>
        <!-- Scales -->
        <item name="routeScale">1.0</item>
    </style>

    <style name="NavigationView" parent="Theme.AppCompat.NoActionBar">
        <item name="navigationViewPrimary">@color/mapboxAppPrimaryLight</item>
        <item name="navigationViewSecondary">@color/mapboxBlue</item>
        <item name="navigationViewAccent">@color/mapboxPink</item>
    </style>


    <style name="RiseUpDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor"> @color/black </item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>

    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_bottom</item>
    </style>


    <style name="BloodCustomToggleButtonStyle">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/audio_player_button_group_toggle_custom_drawable</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/audio_player_button_text_toggle</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>



    <style name="AppThemeRatingBar" parent="ThemeOverlay.MaterialComponents">
        <item name="ratingBarStyle">@style/placeRatingBar</item>
    </style>

    <style name="placeRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <!--<item name="android:progressDrawable">@drawable/food_rating_bar_full</item>-->
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
        <item name="colorAccent">#f9a825</item>
    </style>

    <style name="placeRatingBarDialog" parent="Widget.AppCompat.RatingBar">
        <!--<item name="android:progressDrawable">@drawable/custom_rating_bar_star_drawable</item>-->
        <item name="android:max">5</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">#f9a825</item>
    </style>



    <style name="HeaderImage">
        <item name="android:layout_margin">0dp</item>

    </style>

    <style name="Text.Title.Bold" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">14dp</item>
    </style>


    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

</resources>
