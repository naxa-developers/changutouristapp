<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage_changu_bg_img"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_qr_scanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LanguageSelectorTextStyle"
        android:text="Scan QR Code"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginRight="@dimen/activity_default_margin"
        />


    <TextView
        android:layout_below="@id/tv_qr_scanner"
        android:id="@+id/tv_view_vr_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LanguageSelectorTextStyle"
        android:text="View VR Image"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginRight="@dimen/activity_default_margin"
        />


    <TextView
        android:layout_below="@id/tv_view_vr_image"
        android:id="@+id/tv_view_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LanguageSelectorTextStyle"
        android:text="View on Map"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginRight="@dimen/activity_default_margin"
        />


</RelativeLayout>