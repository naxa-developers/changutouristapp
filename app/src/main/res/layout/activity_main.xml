<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar_layout"/>

    <ImageView
        android:layout_below="@id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/changu_image_red"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentBackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_home_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/changunarayan"
                    android:layout_alignParentTop="true"
                    android:background="@color/transparent"
                    android:textColor="@color/white_80"
                    android:textSize="@dimen/material_text_display2"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="@dimen/default_padding"
                    android:layout_marginTop="@dimen/spacing_home_button_margin"
                    android:layout_marginLeft="@dimen/activity_default_margin"
                    android:layout_marginRight="@dimen/activity_default_margin"
                    android:layout_marginBottom="@dimen/spacing_medium"

                    />

                <TextView
                    android:id="@+id/tv_home_address"
                    android:layout_below="@+id/tv_home_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nepal"
                    android:textColor="@color/white_80"
                    android:textSize="@dimen/material_text_title"
                    android:padding="@dimen/default_padding"
                    android:layout_marginLeft="@dimen/activity_default_margin"
                    android:layout_marginRight="@dimen/activity_default_margin"

                    />


                <TextView
                    android:id="@+id/tv_home_desc"
                    android:layout_below="@id/tv_home_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/see_the_majestic_himalayas_including_mt_everest_if_the_skies_are_clear_you_can_view_the_himalayan_mountains"
                    android:textColor="@color/white_80"
                    android:textSize="@dimen/material_text_subhead"
                    android:padding="@dimen/default_padding"
                    android:layout_marginLeft="@dimen/activity_default_margin"
                    android:layout_marginRight="@dimen/activity_default_margin"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_home_bottom_curve"
                        android:scaleType="fitXY"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/activity_default_margin"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2.5"
                                android:background="@color/transparent">
                            </ImageView>

                            <ImageView
                                android:layout_margin="@dimen/activity_default_margin"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="4"
                                android:src="@drawable/home_map_image"/>

                            <ImageButton
                                android:id="@+id/btn_view_on_map"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/home_btn_map"
                                android:visibility="visible"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/activity_default_margin"
                                />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".5"
                                android:background="@color/transparent">
                            </ImageView>

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/activity_default_margin"
                        android:paddingLeft="@dimen/activity_default_margin"
                        android:paddingBottom="@dimen/activity_default_margin"
                        >

                        <ImageView
                            android:layout_marginLeft="@dimen/spacing_xlarge"
                            android:layout_marginRight="@dimen/spacing_xlarge"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3.5"
                            android:scaleType="fitXY"
                            android:src="@drawable/home_scan_image"/>

                        <ImageButton
                            android:id="@+id/btn_qr_scan"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight=".9"
                            android:layout_marginTop="@dimen/activity_default_margin"
                            android:background="@drawable/home_btn_qr_scan"
                            android:visibility="visible"
                            android:layout_gravity="center_horizontal"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3.5"
                            android:background="@color/transparent">
                        </ImageView>

                    </LinearLayout>



                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>