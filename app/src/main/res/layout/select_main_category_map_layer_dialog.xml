<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/activity_default_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_map_category_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="@dimen/default_padding"
        android:backgroundTint="@color/sectionrecyclerHeadBG"
        app:cardElevation="3dp">


        <TextView
            android:id="@+id/tv_select_map_layer_main_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/english"
            style="@style/headlineText"
            android:textSize="@dimen/sp_16"
            android:layout_margin="@dimen/spacing_xxsmall"
            android:padding="@dimen/spacing_small"
            android:background="@color/sectionrecyclerHeadBG"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>