<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/activity_default_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_nearby_place_image"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:srcCompat="@drawable/ic_bottom_menu_map_24dp"
        />

    <TextView
        android:id="@+id/tv_nearby_place_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place Name"
        android:textColor="@color/slate_black"
        android:textSize="@dimen/material_text_body2"
        android:gravity="center"/>

</LinearLayout>